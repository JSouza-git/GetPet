<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Cargos</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Descrição</th>
        <th>Permissão</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @cargos.each do |cargo| %>
        <tr>
          <td><%= cargo.nome %></td>
          <td><%= cargo.descricao %></td>
          <td><%= cargo.permissao %></td>
          <td><%= link_to 'Mostrar', cargo %></td>
          <td><%= link_to 'Editar', edit_cargo_path(cargo) %></td>
          <td><%= link_to 'Remover', cargo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
        <tr>
            <td><%= link_to 'Novo Cargo', new_cargo_path %></td>
        </tr>
    </tbody>
  </table>
</div>
<%= render 'footer'  %>