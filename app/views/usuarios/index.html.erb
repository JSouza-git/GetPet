<%= stylesheet_link_tag "style_padrao_listar.css" %>
<%= render 'header'  %>

<p id="notice"><%= notice %></p>

<h1 class="title-table">Usuários</h1>
<div class="table-wrapper">
  <table class="fl-table">
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Senha</th>
        <th>Telefone</th>
        <th colspan="3">Ações</th>
      </tr>
    </thead>

    <tbody>
      <% @usuarios.each do |usuario| %>
        <tr>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td><%= usuario.senha %></td>
          <td><%= usuario.telefone %></td>
          <td><%= link_to 'Mostrar', usuario %></td>
          <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
          <td><%= link_to 'Remover', usuario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      <tr>
        <td><%= link_to 'Novo Usuário', new_usuario_path %></td>
      </tr>
    </tbody>
  </table>
</div>

<%= render 'footer'  %>